{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "./dist/server.js",
  "engines": {
    "node": "15.*",
    "yarn": "1.*"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@ls-base/(.*)": "<rootDir>/src/$1",
      "^@ls-util/(.*)": "<rootDir>/src/util/$1",
      "^@ls-api/(.*)": "<rootDir>/src/api/$1"
    },
    "testMatch": [
      "/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!server/server.ts",
      "!server/app.ts",
      "!webpack.config.ts",
      "!scripts/*"
    ],
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "Test Report"
        }
      ]
    ]
  },
  "dependencies": {
    "@shared": "link:../shared/dist",
    "dotenv": "8.2.0",
    "fastify": "3.14.1",
    "jsonwebtoken": "8.5.1",
    "mongoose": "5.11.10"
  },
  "scripts": {
    "start": "webpack --watch",
    "build": "webpack --config webpack.config.ts",
    "lint": "eslint -c .eslintrc.json '*/**/*.{ts,tsx}' --quiet --fix",
    "test": "jest --runInBand --coverage --colors",
    "test:watch": "jest --coverage --colors --watchAll",
    "test:only": "jest --runInBand"
  },
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@types/jsonwebtoken": "8.5.0",
    "@types/mongoose": "5.10.3",
    "@types/node": "14.14.37",
    "@types/supertest": "2.0.10",
    "jest": "26.6.3",
    "jest-html-reporter": "^3.3.0",
    "mongodb-memory-server": "6.9.3",
    "supertest": "6.1.3",
    "ts-jest": "26.5.0"
  }
}
